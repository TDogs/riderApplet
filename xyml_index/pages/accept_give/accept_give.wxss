/* pages/pro/pro.wxss */ 
.pro_top{padding: 20rpx; margin: 20rpx; box-shadow:0 0 8px #e2e2e2; -webkit-box-shadow:0 0 8px #e2e2e2; -moz-box-shadow:0 0 8px #e2e2e2; border-radius:5px; -moz-border-radius:5px; margin-bottom: 40rpx;}
.pro_top .pic{ overflow: hidden;position: relative; line-height: 0px; border-radius:5px; -moz-border-radius:5px;}
.pro_top .pic image{ width: 100%; border-radius:5px; -moz-border-radius:5px;}

.pro_top .pic .box{ width: 100%; line-height:70rpx;position: absolute;left: 0px;bottom: 0px; background:rgba(0, 0, 0, 0.7);overflow: hidden;}
.pro_top .pic .title{width: 60%; height: 70rpx; overflow: hidden; padding-left:20rpx;  font-size:28rpx; color: #fff;float: left;}
.pro_top .pic .jiage{ float: right; font-size: 32rpx; color: #dc0531;}
.pro_top .pic .jiage text{ font-size: 24rpx;}
.pro_top .pic .shuzi{ float:right; font-size:32rpx; margin-left: 5rpx; padding-right:20rpx; }

.text{ padding-top: 20rpx;}
.zufu_text{ font-size:30rpx;}
.nichen{overflow: hidden; font-size:28rpx; padding: 20rpx 20rpx 0 0;text-align: right; color: #666;} 


.accept_xx{overflow: hidden; border-top:1px solid #eee; padding-top: 30rpx; margin-top: 30rpx;}
.zufu_text textarea{ width:-moz-calc(100% - 34rpx); width:-webkit-calc(100% - 34rpx); width:calc(100% - 34rpx);padding: 10rpx 15rpx; height:80px; color: #333; font-size: 28rpx; border: 1px solid #eee; border-radius:4px; -moz-border-radius:4px; margin-bottom: 15rpx;}

.zufu_text_bnt{ float:left; line-height:70rpx;}
.zufu_text_bnt image{width:40rpx; float: left; margin:7px 5px 0px 0px; font-size: 28rpx;}


.pro_bnt_bg{ width: 100%; position: fixed;left: 0px;bottom: 0px;background: #fff; }
.pro_bnt{ margin: 10px 20rpx; font-size:30rpx;  line-height:80rpx; display: block; text-align: center; color: #fff; background: #dc0531; border-radius:4px; -moz-border-radius:4px;}

.wait{text-align: center;color:#dc0531;font-size:40rpx;font-weight: bold}
.sender_wait{margin-bottom: 180rpx;}
.flowchart_box{padding: 20rpx; margin: 20rpx; box-shadow:0 0 8px #e2e2e2; -webkit-box-shadow:0 0 8px #e2e2e2; -moz-box-shadow:0 0 8px #e2e2e2; border-radius:5px; -moz-border-radius:5px; margin-bottom: 40rpx;}


.instructions{ padding:20rpx 40rpx;text-align: left;}
.instructions .title{ font-size: 30rpx;color: #333;}
.instructions .com{padding:5rpx 10rpx 0 1em; font-size: 28rpx; color: #666;}
.instructions view{ padding-bottom:10rpx;}

.return_txt{padding: 20rpx; margin: 20rpx; margin-top: 80rpx;font-size:36rpx;}