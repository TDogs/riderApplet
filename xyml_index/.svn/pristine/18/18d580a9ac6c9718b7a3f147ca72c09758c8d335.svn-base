
/* pages/product/product.wxss */

@import "/wxParse/wxParse.wxss";
page{ padding-bottom:120rpx;}
.pro_top swiper{ height:374rpx;}
.pro_top swiper image{ height:100%;}
.pro_bottom{ padding: 40rpx 30rpx 0rpx;}
.pro_xx{ overflow:hidden; font-size: 28rpx; color: #333; padding-bottom: 40rpx;}
.pro_xx_l{ font-weight: bold; padding-bottom: 10px;}
.pro_xx_r{ color: #666;}


.pro_bnt_bg{ width: 100%; position: fixed;left: 0px;bottom: 0px;background: #fff;border-top:1px solid #eee; }
.pro_bnt{ margin: 10px 20rpx; font-size:30rpx;  line-height:80rpx; display: block; text-align: center; color: #fff; background: #dc0531; border-radius:4px; -moz-border-radius:4px;}


.stepper { float: right; height: 70rpx; line-height:65rpx; border: 1px solid #ccc; border-radius: 3px;margin:0 auto;}    
.stepper text { width: 70rpx;  line-height: 70rpx; text-align: center; float: left;}    
.stepper input { width: 40px; height: 70rpx; float: left;margin: 0 auto;text-align: center;font-size:28rpx;border-left: 1px solid #ccc; border-right: 1px solid #ccc;}   
.stepper .normal{ color:black;}    
.stepper .disabled{color:#ccc;}  
.information{margin-bottom: 40rpx;padding-top: 10rpx;}



/*主容器*/  
.stepper {  
  width:90px;  
  height: 26px;  
  /*给主容器设一个边框*/  
  border: 1rpx solid #000000;  
  border-radius: 3px;  
  margin:0 auto;  
}  

/*加号和减号*/  
.stepper text {  
  width: 24px;  
  line-height: 26px;  
  text-align: center;  
  float: left;  
}  

/*数值*/  
.stepper input {  
  width: 40px;  
  height: 26px;  
  float: left;  
   margin: 0 auto;   
  text-align: center;  
  font-size: 12px;  
  color: #000000;
  /*给中间的input设置左右边框即可*/  
  border-left: 1rpx solid #000000;  
  border-right: 1rpx solid #000000;  
}  

/*普通样式*/  
.stepper .normal{  
  color: black;  
}  

/*禁用样式*/  
.stepper .disabled{  
  color: #ccc;  
}  

