/* pages/leading/leading.wxss */
/* 首页改版样式 */
.banner{ margin-bottom: 20rpx;}
.banner image{ width: 100%; height:100%;}
swiper{ margin:0 25rpx 25rpx; height:360rpx; border-radius:20rpx; -moz-border-radius:20rpx; overflow: hidden;}

.leading_t{ padding:10rpx 25rpx 0; font-weight: bold;}
.leading_t .title{ font-size:40rpx; color: #333;}
.leading_t .text{ font-size: 24rpx; color: #8547ad;}
.leading_c{ padding: 25rpx; overflow:hidden;}
.leading_c .left{ width: 48%; padding-right: 2%; float: left;}
.leading_c .left image{ width:100%; border: 1px solid #8547ad; border-radius:20rpx; -moz-border-radius:20rpx;}
.leading_c .right{ width: 48%; padding-left: 2%; float: right;}
.leading_c .right image{ width:100%; border: 1px solid #8547ad; border-radius:20rpx; -moz-border-radius:20rpx;}
.leading_c .right .pic{ line-height: 0; font-size: 0;}
.leading_c .right .pic2{ margin-top: 22rpx;}

.list{ padding-bottom:90rpx;}
.list_t{padding:0rpx 24rpx; line-height:60rpx; font-size:32rpx;}
.list_c{ padding:20rpx 24rpx ; padding-bottom:30rpx; overflow: hidden; }
.pro{ width:-moz-calc(50% - 22rpx); width:-webkit-calc(50% - 22rpx); width:calc(50% - 22rpx); float: left; margin-bottom: 20rpx; box-shadow:0 0 8px #e2e2e2; -webkit-box-shadow:0 0 8px #e2e2e2; -moz-box-shadow:0 0 8px #e2e2e2; background: #fff;border-radius:8px;}
.pro:nth-child(2n+0){ margin-left: 40rpx;}  
.pro_pic{ width: 100%; height: auto;border-radius:8px; line-height: 0px; font-size: 0rpx;}
.pro_text{display: block; text-align: center; line-height: 50rpx; padding-bottom: 5rpx; font-size:28rpx; clear: #333;}


.menu{width: 100%; height:90rpx; position: fixed;left: 0px; bottom: 0px; background: #fff; z-index: 1!important;border-top:2rpx solid #eee; }
.menu .menu_a{ width: 50%; float: left;display: block; text-align: center; font-size: 32rpx; line-height:90rpx; color: #333;position: relative;}
.menu .menu_a:after{ width:2rpx; height:40%; content:""; display:block; position:absolute; right:0px; top:30%;background: #eee;}
.menu .menu_a:nth-child(2):after{display: none;}
.menu .menu_a image{ width: 45rpx; position: absolute; left: 50%; top: 25rpx; margin-left: -3.7em;}
.menu .menu_a:nth-child(2) image{ margin-left: -4.2em;}

/**弹窗样式**/
.pro_sz_pop{ width:-moz-calc(100% - 120rpx); width:-webkit-calc(100% - 120rpx); width:calc(100% - 120rpx); margin:0 20rpx; padding:40rpx; background: #fff;}
.pop_bg_com{ position: relative; margin-top: 250rpx; padding-top: 180rpx;}
.pro_sz_pop .com .text{ padding: 20rpx; font-size: 32rpx; line-height: 50rpx; height: auto;}
.pro_sz_pop .box_bnt .bnt{ width: 80%; margin: 0 auto; background: #8547ad; border-color:#8547ad;}
.pop_bg .ico_ip{width: 240rpx; height: 240rpx; position: absolute; left: 50%; margin-left: -120rpx; top: 0; z-index: 9;}
.pop_bg .ico_ip image{ width: 100%;}
.pop_bg .box_gb{ width: 80rpx; margin: 20rpx auto; line-height: 80rpx; font-size: 50rpx; border: 4rpx solid #fff; text-align: center; color: #fff;border-radius:360px;}

