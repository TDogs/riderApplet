/* pages/new_order/new_order.wxss */
 
page{background: #f6f6f6;}
.menu{width: 100%; height: 90rpx; line-height: 90rpx; text-align: center; color: #333; font-size:28rpx; background: #fff; position: fixed;left: 0px;top: 0px;border-bottom: 1px solid #eee; z-index: 9;}
.menu view{width:50%;float: left;position: relative;}
.menu .on{ color: #dc0531; }
.menu .on:after{ width:60%; height:2px; content:""; display:block; position:absolute; left:20%; bottom:0px;background: #dc0531; border-radius:45px; -moz-border-radius:45px;}

.list{overflow: hidden; padding-top:90rpx}


.pro_bg{padding: 20rpx; margin: 20rpx; box-shadow:0 0 8px #e2e2e2; -webkit-box-shadow:0 0 8px #e2e2e2; -moz-box-shadow:0 0 8px #e2e2e2; border-radius:5px; -moz-border-radius:5px;}
.pro_bg .pro{position: relative;}
.pro_bg .pro .pic{line-height: 0; font-size: 0;border-radius:8px;overflow: hidden;}
.pro_bg .pro .pic image{width:100%;}

.pro .text{ padding: 20rpx 10rpx 0;}
.pro .text .title{font-size:36rpx; color: #333;}
.pro .text .qian{ float: left; font-size: 24rpx;}
.pro .text .box{ color: #dc0531; line-height:76rpx;font-size:42rpx; }
.pro .not_receive{ width:120rpx; line-height: 50rpx; text-align: center; background: #1aad19; font-size:28rpx; color: #fff; position: absolute; left: 0px; top: 0px;border-radius:0 0 5px 5px; -moz-border-radius:0 0 5px 5px;}
.pro .bianhao{ padding: 0 20rpx; line-height: 50rpx; text-align: center; background: #666; font-size:28rpx; color: #fff; position: absolute; right: 0px; top: 327rpx;border-radius:5px 0 5px 0px; -moz-border-radius:5px 0 5px 0px;}
.pro .right{ position: absolute; right:10rpx; top:-114rpx;border-radius:4px;overflow: hidden;}
.trans_box{ position: relative;}
.trans_box_xx{ font-size:24rpx; color: #1aad19; padding:10rpx 0; border-top: 1px solid #ddd;}
.trans_box_xx view{ padding:5rpx 0;}

.pro .right .btn{ float: left; font-size:28rpx; padding: 5px 8px;color: #fff; background: #1aad19;}
.pro .right .btn:nth-child(1){ border-right:1px solid #8dd68c;}

.no_data{margin: 400rpx auto 0; text-align: center; font-size:32rpx; color: #666;}
#info{display: block}
.show_detail{ width: 200rpx; margin:15rpx 0; line-height:65rpx; font-size:24rpx; color: #666; border: none;}
.show_detail image{ width: 30rpx; height: 30rpx; float: right; margin-top:18rpx;}
.detail_box{ border-top:2rpx dashed #ddd; margin-top: 25rpx; padding-top:15rpx;}
.detail_box view{ padding: 5rpx 0; font-size:24rpx; color: #999;}
.text_r{ float: right;}
.detail_box .fpxx{ padding: 0 20rpx;}


